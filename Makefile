##################################################
# Makefile Settings
##################################################

SHELL=bash

.EXPORT_ALL_VARIABLES:

##################################################
# Makefile Variables #############################
##################################################

# $(CURDIR)

#------------------------------------------------#

LibraryTarget ?=lib:wave

#------------------------------------------------#

Cabal ?=cabal
Open  ?=xdg-open

#------------------------------------------------#

CheckCabal	?=$(Cabal) check
CheckTarball	?=tar -C /tmp -zxvf
CheckMarkdown	?=$(Markdown)
CheckNix	?=nix-instantiate

#------------------------------------------------#

Tags     ?=etags
TagsFile ?=TAGS

##################################################
# Makefile Targets ###############################
##################################################

build:

	$(Cabal) new-build all

.PHONY: build

#------------------------------------------------#

check:

	$(Cabal) new-test all

.PHONY: check

#------------------------------------------------#

install: sdist

.PHONY: install

#------------------------------------------------#

sdist: build

	$(Cabal) new-sdist all

.PHONY: sdist

##################################################